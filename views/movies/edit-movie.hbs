<h2>Update movie</h2>

<form action='/movies/{{movie._id}}' method='POST'>
  <label for='title'>Title:</label>
  <input type='text' name='title' value={{movie.title}} required />
  <label for='genre'>Genre</label>
  <input type='text' name='genre' value={{movie.genre}} required />
  <label for='plot'>Plot</label>
  <input type='text' name='plot' value={{movie.plot}} required />
  <label for='cast'>Choose celebrities:</label>
  <select name='cast' multiple required>
    {{#each actors}}
      {{#if selected}}
        <option value='{{_id}}' selected>{{name}}</option>
      {{else}}
        <option value='{{_id}}'>{{name}}</option>
      {{/if}}
    {{/each}}
  </select>
  <button type='submit'>Update movie</button>
</form>